<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SKU : " />

            <EditText
                android:id="@+id/txtSKU"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number" />

            <ToggleButton
                android:id="@+id/tbtValidar"
                android:layout_width="50dp"
                android:layout_height="31dp"
                android:background="@drawable/tooglebutton_selector"
                android:checked="true"
                android:text="ToggleButton"
                android:textOff="✓"
                android:textOn="✓" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btCaptura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAPTURAR DATOS" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView05"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Peso : " />

            <TextView
                android:id="@+id/txtPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView02"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Largo : " />

            <TextView
                android:id="@+id/txtLargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.0" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView03"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Ancho : " />

            <TextView
                android:id="@+id/txtAncho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView04"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Alto : " />

            <TextView
                android:id="@+id/txtAlto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.0" />
        </LinearLayout>

        <Button
            android:id="@+id/btEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENVIAR" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="Visual LED"
            tools:ignore="VectorDrawableCompat" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

